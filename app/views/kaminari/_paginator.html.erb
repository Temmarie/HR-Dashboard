<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if paginator.current_page == 1 %>
      <li class="page-item disabled"><a class="page-link">«</a></li>
    else %>
      <%= link_to('&laquo;'.html_safe, url_for(page: 1), class: 'page-link', rel: 'first') %>
    <% end %>
    <% if paginator.current_page > 1 %>
      <%= link_to('&lsaquo;'.html_safe, url_for(page: paginator.current_page - 1), class: 'page-link', rel: 'prev') %>
    else %>
      <li class="page-item disabled"><a class="page-link">&lsaquo;</a></li>
    <% end %>
    <% paginator.each_page do |page| %>
      <% if page.current? %>
        <li class="page-item active"><%= link_to(page, '#', class: 'page-link') %></li>
      else %>
        <li class="page-item"><%= link_to(page, url_for(page: page), class: 'page-link') %></li>
      <% end %>
    <% end %>
    <% if paginator.current_page < paginator.total_pages %>
      <%= link_to('&rsaquo;'.html_safe, url_for(page: paginator.current_page + 1), class: 'page-link', rel: 'next') %>
    else %>
      <li class="page-item disabled"><a class="page-link">&rsaquo;</a></li>
    <% end %>
    <% if paginator.current_page == paginator.total_pages %>
      <li class="page-item disabled"><a class="page-link">»</a></li>
    else %>
      <%= link_to('&raquo;'.html_safe, url_for(page: paginator.total_pages), class: 'page-link', rel: 'last') %>
    <% end %>
  </ul>
</nav>



<% end -%>

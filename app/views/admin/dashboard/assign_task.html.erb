<div class="text-white p-6 max-w-3xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Assign Task to Employee</h1>

  <%= form_with url: assign_task_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :employee_id, "Select Employee" %>
      <%= f.collection_select :employee_id, Employee.all, :id, :name, { prompt: "Choose one" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= f.label :task_name, "Task Name" %>
      <%= f.text_field :task_name, class: "form-input" %>
    </div>

    <%= f.submit "Assign Task", class: "btn btn-primary" %>
  <% end %>
</div>
